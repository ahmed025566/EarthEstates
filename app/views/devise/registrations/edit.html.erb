<div class="col-5 text-center center signUp">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 fw-normal text-center">Update your account</h1>


  <div class="form-floating">
    <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "First name" %>
    <label for="floatingInput">First name</label>
  </div>

  <div class="form-floating">
    <%= f.text_field :last_name, class: 'form-control', placeholder: "Last name" %>
    <label for="floatingInput">Last name</label>
  </div>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "InputEmail", class: 'form-control', placeholder: "name@example.com" %>
    <label for="floatingInput">Email address</label>
  </div>


  <div class="form-floating">
    <%= f.text_field :telephone, class: 'form-control', placeholder: "Last name" %>
    <label for="floatingInput">Phone Number</label>
  </div>

  <div class="form-floating">
    <%= f.text_field :company, class: 'form-control' %>
    <label for="floatingInput">Company</label>
  </div>


  <div class="form-floating">
    <%= f.text_area :details, class: 'form-control' %>
    <label for="floatingInput">Details</label>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", id: "floatingPassword", class: "form-control", placeholder: "Password"  %>
    <label for="floatingPassword">New Password</label>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "floatingPassword", class: "form-control", placeholder: "Password"  %>
    <label for="floatingPassword">Password confirmation</label>
  </div>


  <div class="form-floating">
    <%= f.password_field :current_password, autocomplete: "new-password", id: "floatingPassword", class: "form-control", placeholder: "Password"  %>
    <label for="floatingPassword">Current password</label>
  </div>


  <div class="mb-3 mt-3">
    <p class="text-start image_label">Image Photo</p>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="mb-3 mt-3">
    <p class="text-start image_label">Cover Photo</p>
    <%= f.file_field :cover, class: 'form-control' %>
  </div>

  <button class="w-100 btn btn-lg btn-primary" style="margin-top: 0px" type="submit" style="margin-top: 20px">Update</button>

<% end %>
<div class="row mt-2 d-flex justify-content-center">
<div class="col-5"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger', style: 'height: 46px; width: 200px; font-weight: 700' %></div>

<div class="col-3"><%= link_to "Back", :back, class: 'btn btn-secondary col-12 d-flex justify-content-center align-items-center', style: 'height: 46px; font-weight: 700'%></div>
</div>